{
  "name": "telegram-app",
  "version": "1.0.0",
  "description": "A web application for managing Telegram sessions and campaigns",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:python\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && PORT=3001 npm start",
    "dev:backend": "cd backend && npm run dev",
    "dev:python": "cd python-service && ./start.sh",
    "start": "node backend/server.js",
    "test": "jest",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install && cd ../python-service && pip install -r requirements.txt"
  },
  "keywords": [
    "telegram",
    "pyrogram",
    "automation"
  ],
  "author": "Qwen Code",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "nodemon": "^3.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "bullmq": "^4.10.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "redis": "^4.6.7",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  }
}
